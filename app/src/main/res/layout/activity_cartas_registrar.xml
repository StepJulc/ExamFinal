<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartasRegistrarActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="68dp"
        android:text="Cartas"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="155dp"
        android:text="Nombre : "
        android:textAlignment="textEnd"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edNombreCart"
        android:layout_width="218dp"
        android:layout_height="41dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/edAtaqueCart"
        android:layout_width="218dp"
        android:layout_height="41dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Ataque"
        android:inputType="text|textMultiLine"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/edNombreCart" />

    <EditText
        android:id="@+id/edDefenzaCart"
        android:layout_width="218dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Defenza"
        android:inputType="text|textMultiLine"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/edAtaqueCart" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="31dp"
        android:text="Ataque : "
        android:textAlignment="textEnd"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="62dp"
        android:text="Defenza : "
        android:textAlignment="textEnd"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="24dp"
        android:text="Longitud : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="75dp"
        android:text="Latitud : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edDefenzaCart" />

    <TextView
        android:id="@+id/tvLatitudCart"
        android:layout_width="111dp"
        android:layout_height="21dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="75dp"
        android:hint="Latitud"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/edDefenzaCart" />

    <TextView
        android:id="@+id/tvLongitudCart"
        android:layout_width="111dp"
        android:layout_height="21dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:hint="Longitud"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/tvLatitudCart" />

    <ImageView
        android:id="@+id/ivImagenCart"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="501dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btGaleriaCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:text="GALERIA"
        app:layout_constraintStart_toEndOf="@+id/ivImagenCart"
        app:layout_constraintTop_toBottomOf="@+id/tvLongitudCart" />

    <Button
        android:id="@+id/btRegistrarCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="14dp"
        android:text="REGISTRAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btGaleriaCart" />

</androidx.constraintlayout.widget.ConstraintLayout>